<h1>To Do List

<%= link_to'', new_list_path, class: 'glyphicon glyphicon-plus' %>
</h1>



<ul class="list-group">
  <% @lists.each do |list| %>
    <li class="list-group-item"> 
      <blockquote class="blockquate">
        <p class="mb-0"><%= list.title %></p>
          <footer class="blockquate-footer"><%= list.date %></footer>
      </blockquote>
      <%= link_to '內容', list_path(list), class: 'btn btn-info' %>
      <%= link_to '修改', edit_list_path(list), class: 'btn btn-primary' %>
      <% if list.date < Date.today %>
      <%= link_to '過期', list_path(list), class: 'btn btn-danger disabled' %>
      <% else %>
      <%= link_to '刪除', list_path(list), class: 'btn btn-danger', method: :delete, data:{ confirm: "Are you sure?"} %>
      <% end %>
    </li>
  <% end %>
</ul>


